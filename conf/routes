# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /uploadForm                 controllers.Application.uploadForm

POST    /                           controllers.Application.upload()

POST    /FileUpload                 controllers.Application.upload

GET     /spark/file                 controllers.UploadFile.file
GET     /spark/overview             controllers.SparkOverview.overview
#GET     /spark/action               controllers.SparkInAction.inAction(filename: String)
POST     /spark/action               controllers.SparkInAction.inAction
POST    /spark/action/collect       controllers.SparkInAction.applyCollect
POST     /spark/action/filter        controllers.SparkInAction.applyFilter
POST     /spark/action/sort          controllers.SparkInAction.applySort
POST     /spark/action/describe      controllers.SparkInAction.applyDescribe
POST     /spark/action/limit         controllers.SparkInAction.applyLimit(limit: Int)
POST     /spark/action/add           controllers.SparkInAction.applyAdd
POST     /spark/action/drop          controllers.SparkInAction.applyDrop
POST     /spark/action/duplicate     controllers.SparkInAction.applyReplace
POST     /spark/action/distinct      controllers.SparkInAction.applyDistinct
POST     /spark/action/select        controllers.SparkInAction.applySelect
POST     /spark/action/orderBy         controllers.SparkInAction.applyOrderBy
POST     /spark/action/show          controllers.SparkInAction.applyShow


GET     /spark/action/report        controllers.SparkInAction.chartReport
GET     /arch/overview              controllers.ArchitectureOverview.overview

GET     /messages.js                controllers.JsMessagesController.jsMessages

POST    /populate                   controllers.SparkInAction.populateModal

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
